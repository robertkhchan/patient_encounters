<h1>Patient</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong> <%= @patient.first_name %>
</p>

<p>
  <strong>Middle name:</strong> <%= @patient.middle_name %>
</p>

<p>
  <strong>Last name:</strong> <%= @patient.last_name %>
</p>

<p>
  <strong>Weight:</strong> <%= @patient.weight %>
</p>

<p>
  <strong>Height:</strong> <%= @patient.height %>
</p>

<p>
  <strong>MRN:</strong> <%= @patient.MRN %>
</p>

<div>
	<strong>Encounters</strong>
	<%= button_to "Add Encounter", new_patient_encounter_path(@patient), :method => "get" %>
	<table border="1" style="width:100%">
	  <thead>
	    <tr>
	      <th>Visit Number</th>
	      <th>Admitted At</th>
	      <th>Discharged At</th>
	      <th colspan="3">Actions</th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @patient.encounters.each do | encounter | %>
	      <tr>
	        <td><%= encounter.visit_number %></td>
	        <td><%= encounter.admitted_at %></td>
	        <td><%= encounter.discharged_at %></td>
	        <td><%= link_to 'Show', patient_encounter_path(@patient, encounter) %></td>
	        <td><%= link_to 'Edit', edit_patient_encounter_path(@patient, encounter) %></td>
	        <td><%= link_to 'Destroy', patient_encounter_path(@patient, encounter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br/>
<br/>

<p>
<%= link_to 'Back', patients_path, :class => 'btn btn-default' %>
</p>
